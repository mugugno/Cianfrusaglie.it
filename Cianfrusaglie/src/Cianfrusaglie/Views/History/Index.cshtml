@model List<IEnumerable<Cianfrusaglie.Models.Announce>>

@{
    ViewData["Title"] = "I miei annunci";
}

<div id="wrap">
    <div class="panel panel-body" >
        <div class="row">
            <div class="col-md-6">
                <div class="panel panel-default">
                    <div class="panel-heading" id="my-conversations">
                        <h2>I miei annunci</h2>
                    </div>
                    <div class="panel-body">
                        <div class="panel-group" id="panel-524234">
                            @if (Model.Any())
                            {
                                foreach (var item in Model[0])
                                {
                                    <div class="panel panel-default">
                                        <div class="panel-heading collapsed" data-toggle="collapse" data-parent="#panel-524234" href="#announce-number-@item.Id" style="cursor: pointer">

                                            <span style="float: right"> Pubblicato il @item.PublishDate </span>
                                            <span style="font-size: 1.5em"><b>@item.Title</b></span>
                                            <span style="margin-left: 1em">Numero di interessati: @item.Interested.Count</span>
                                        </div>
                                        <div id="announce-number-@item.Id" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <div class="form-group">
                                                    <div class="col-md-1">
                                                        @if (item.Images.Any())
                                                        {
                                                            <div class="photo">
                                                                <img class="img-responsive" src="@item.Images.First().Url" />
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="col-md-9">

                                                        <a href="~/Announces/Details/?id=@item.Id">Visualizza annuncio</a> <br />
                                                        <a href="~/Announces/Delete/?id=@item.Id">Elimina annuncio</a> <br />
                                                        <a href="~/InterestedAnnounce/?id=@item.Id">Visualizza utenti interessati</a>

                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div>Non hai ancora pubblicato alcun annuncio!</div>
                            }

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="panel panel-default">

                    <div class="panel-heading" id="my-conversations">
                        <h2>Gli annunci che mi interessano</h2>
                    </div>
                    <div class="panel-body">
                        <div class="panel-group" id="panel-524234">
                            @if (Model.Any())
                            {

                                foreach (var item in Model[1])
                                {
                                    <div class="panel panel-default">
                                        <div class="panel-heading collapsed" data-toggle="collapse" data-parent="#panel-524234" href="#announce-number-@item.Id" style="cursor: pointer">

                                            <div class="row">
                                                <div class="col-md-4"><span style="font-size: 1.5em"><b>@item.Title</b></span></div>
                                                <div class="col-md-4" style="text-align: center; padding-top: 5px">
                                                    @if (((List<int>)ViewData["AnnounceIWasChosenFor"]).Contains(item.Id))
                                                    {
                                                        <span class="label label-success" style="font-size: 1em; border-radius: 1em; font-weight: normal;">Sei stato scelto per questo annuncio!</span>
                                                    }
                                                </div>
                                                <div class="col-md-4" style="text-align: right; padding-top: 5px"><span> Pubblicato il @item.PublishDate </span></div>
                                            </div>
                                        </div>
                                        <div id="announce-number-@item.Id" class="panel-collapse collapse">
                                            <div class="panel-body">
                                                <div class="form-group">
                                                    <div class="col-md-1">
                                                        @if (item.Images.Any())
                                                        {
                                                            <div class="photo">
                                                                <img class="img-responsive" src="@item.Images.First().Url" />
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="col-md-9">

                                                        <a href="~/Announces/Details/?id=@item.Id">Visualizza annuncio</a> <br />
                                                        <a href="~/Messages/Create/?id=@item.AuthorId">Contatta</a> <br />
                                                        @if (((List<int>)ViewData["AnnounceIWasChosenFor"]).Contains(item.Id) && !((List<int>)ViewData["announceIAlreadyGiveFeedback"]).Contains(item.Id))
                                                        {
                                                            <a href="~/Feedback/Create?announceId=@item.Id&receiverId=@item.AuthorId">Manda una recensione all'autore dell'annuncio</a>
                                                        }
                                                        else if (((List<int>)ViewData["AnnounceIWasChosenFor"]).Contains(item.Id) && ((List<int>)ViewData["announceIAlreadyGiveFeedback"]).Contains(item.Id))
                                                        {
                                                            <p>Hai gi&agrave; inviato la tua recensione!</p>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div style="text-align: center;">Non sei interessato ad alcun annuncio!</div>
                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        

    </div>
</div>