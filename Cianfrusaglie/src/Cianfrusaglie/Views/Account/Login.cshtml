@using System.Threading.Tasks
@model  Cianfrusaglie.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div id="wrapper-register">
    <div id="register">
        <h1>
            <a href="~/">questo<strong>e</strong>quello</a>
        </h1>
        <h5>Il posto giusto per le tue cianfrusaglie</h5>
        <form asp-action="Login" asp-controller="Account" class="form-horizontal form-register" method="post" role="form" id="tabellaForm">

            <h2>
                <strong>Accedi</strong>
            </h2>
            <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">Username</label><br />
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label><br />
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br /><button class="btn btn-default" type="submit">Accedi</button>
            </div>
            <span id="sottoForm"><h5>Se non sei ancora registrato, <a href="~/Account/Register">clicca qui</a></h5></span>
        </form>
    </div>
</div>
