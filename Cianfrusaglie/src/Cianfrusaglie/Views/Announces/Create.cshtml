                                                <br /><br />
                                            </div>
                                           
                                            <label asp-for="Title" class="col-md-4 control-label" for="title-mandatory">Titolo</label>
                                            <div class="col-md-7">
                                                <input asp-for="Title" required="" class="form-control inputMargin" id="title-mandatory" placeholder="Il mio annuncio" style="padding-left: 12px" type="text">
                                                <span asp-validation-for="Title" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <!-- Textarea -->
                                        <div class="form-group" >
                                            <label asp-for="Description" class="col-md-4 control-label" for="description" >Descrizione*</label>
