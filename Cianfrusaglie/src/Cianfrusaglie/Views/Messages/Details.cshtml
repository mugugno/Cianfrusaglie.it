@using System.Collections.Generic
@using System.Security.Claims
@using System.Threading.Tasks
@using Microsoft.AspNet.Mvc
@model Cianfrusaglie.ViewModels.MessageCreateViewModel

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Message</h4>
    <hr />
    @{
       var otherUser = ViewData[ "otherUser" ] as User;
       foreach( var m in (IEnumerable<Message>) ViewData["messages"] ) {
        <div>
            <span> @m.DateTime <span style="font-size: 1.5em; font-weight: bold;">
                    Inviato da:
                    @if( m.Receiver.Id.Equals( User.GetUserId() ) ) {
                        <span> @otherUser.UserName </span>
                    } else {
                    <span> Me </span>
                    }
                </span> </span>
        </div>
            <div>
                <h4> @m.Text </h4>
            </div>
        }
    }

    <form asp-action="Create" asp-controller="Messages" class="form-horizontal form-register" method="post" role="form" id="tabellaForm">

        <div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Text" class="control-label">Messaggio</label><br />
            <input asp-for="Text" class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>

            <input asp-for="ReceiverId" type="hidden" value="@ViewData[ "receiverId" ]" class="form-control" />

            <button class="btn btn-default" type="submit">
                Invia
            </button>
        </div>
    </form>
</div>

<p>
    <a asp-action="Index">Back to List</a>
</p>
