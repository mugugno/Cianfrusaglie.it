@using System.Collections.Generic
@using System.Threading.Tasks
@model IEnumerable<Cianfrusaglie.Models.User>

@{
    ViewData["Title"] = "Conversazioni";
}

<h2>Index</h2>

<table>    
@foreach (var item in Model) {
    <tr>
        <td>
            <a asp-action="Details" asp-route-id="@item.Id"> @item.UserName </a>
        </td>
        <td>
            <a asp-action="Delete" style="margin-left: 100px" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
}
</table>
