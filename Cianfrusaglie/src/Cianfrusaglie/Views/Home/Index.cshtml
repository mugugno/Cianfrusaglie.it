
@functions
{

    

    public IEnumerable<Announce> GetAnnounce()
    {
        foreach (var announce in ViewData["listAnnounces"] as List<Announce>)
        {
            yield return announce;
        }
    }

    public User GetAutore(string AuthorId)
    {
        foreach (var user in ViewData["listUsers"] as List<User>)
        {
            if (user.Id == AuthorId)
                return user;
        }
        return null;
    }

}

<div id="wrap">


    @if(TempData["announceCreated"] != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert" >
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" ><span aria-hidden="true">&times;</span></button>
            <strong>Ottimo!</strong> @TempData["announceCreated"]
        </div>
    }
    <div class="container-fluid" id="containerPrincipale">
        <div id="homeCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators" style="z-index: 1">
                <li data-target="#homeCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#homeCarousel" data-slide-to="1"></li>
                <li data-target="#homeCarousel" data-slide-to="2"></li>
                <li data-target="#homeCarousel" data-slide-to="3"></li>
                <li data-target="#homeCarousel" data-slide-to="4"></li>
            </ol>
            <div class="carousel-inner" role="listbox" align="center">
                <div class="item active">
                    <img src="https://images-eu.ssl-images-amazon.com/images/G/29/X-Site/Goldbox/2016/it_xsite_goldbox_1500x300._CB293654318_.jpg"/>
                </div>
                <div class="item">
                    <img src="https://images-eu.ssl-images-amazon.com/images/G/29/_home_and_kitchen/2015/DesignShop/Redesign/BigGraphics/IT_Home_Desingshop-restyle_25-6-2015_4500x900._UX1500_SX1500_CB317222603_.jpg"/>
                </div>
                <div class="item">
                    <img src="https://images-eu.ssl-images-amazon.com/images/G/29/_tools/billboard/it_tools_08-03-2016_professional-store_1500x300._CB294026631_.jpg"/>
                </div>
                <div class="item">
                    <img src="https://images-eu.ssl-images-amazon.com/images/G/29/prime/2016/shipping_benefit/IT_Prime-shipping-visuals_11-04-2016_1500x300._CB274900098_.jpg"/>
                </div>
                <div class="item">
                    <img src="https://images-eu.ssl-images-amazon.com/images/G/29/kindle/merch/2016/campaigns/mday/mday-gw-d-it-1500x300._CB275612559_.jpg"/>
                </div>
            </div>
            <a class="left carousel-control" href="#homeCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#homeCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div id="linkHome">
            <form class="form-inline" role="form">
                <div class="form-group" id="linkRegala">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="#" data-toggle="modal" data-target="#myWindow" role="button" class="btn btn-warning btn-lg btn-round"><span class="glyphicon glyphicon-gift"></span></a>
                    }
                    else
                    {
                        <a href="~/Announces/Create" role="button"class="btn btn-warning btn-lg btn-round"><span class="glyphicon glyphicon-gift"></span></a>
                    }
                    <br/><br/><label>REGALA</label>
                </div>
                <div class="form-group" id="linkVendi">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="#" data-toggle="modal" data-target="#myWindow" role="button" class="btn btn-warning btn-lg btn-round"><span class="glyphicon glyphicon-eur"></span></a>
                    }
                    else
                    {
                        <a href="#" role="button" class="btn btn-warning btn-lg btn-round"><span class="glyphicon glyphicon-eur"></span></a>
                    }
                    <br/><br/><label>VENDI</label>
                </div>
                <div class="form-group" id="linkBaratta">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="#" data-toggle="modal" data-target="#myWindow" role="button" class="btn btn-warning btn-lg btn-round"><span class="glyphicon glyphicon-random"></span></a>
                    }
                    else
                    {
                        <a href="#" role="button" class="btn btn-warning btn-lg btn-round"><span class="glyphicon glyphicon-random"></span></a>
                    }
                    <br/><br/><label>BARATTA</label>
                </div>
            </form>
        </div>


        <hr/>

        <div class="container">


            <div class="row">

                @foreach (var annuncio in GetAnnounce())
            {
                    <div class="col-sm-4 col-md-3">
                        <div class="col-item">
                            <div class="photo">
                                <img src="http://ecx.images-amazon.com/images/I/61QG2uHzY3L._SL1000_.jpg" class="img-responsive" alt="a"/>
                            </div>
                           
                            <div class="info">
                                
                                   
                                        <h5>
                                            @annuncio.Title
                                        </h5>
                                        @if (@annuncio.Price == 0)
                                        {
                                            <h5 class="price-text-color">IN REGALO</h5>
                                        }
                                        else
                                        {
                                            <h5 class="price-text-color">Prezzo: @annuncio.Price</h5>
                                        }


                                <div class="price">
                                    <br/>
                                    <h5>Autore: @GetAutore(@annuncio.AuthorId).UserName</h5>
                                    <br/>
                                </div>
                                <div class="separator clear-left">
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <p class="btn-add">
                                            <i class="fa fa-shopping-cart"></i>
                                            <a href="#" data-toggle="modal" data-target="#myWindow">Dettagli</a>
                                        </p>
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><a href="#" data-toggle="modal" data-target="#myWindow" class="">Contatta</a>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="btn-add">
                                            <i class="fa fa-shopping-cart"></i>
                                            <a href="~/Announces/Details/?id=@annuncio.Id" class="">Dettagli</a>
                                        </p>
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><a href="~/Messages/Details/?id=@annuncio.AuthorId" class="">Contatta</a>
                                        </p>
                                    }
                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>

        


    </div>
</div>



