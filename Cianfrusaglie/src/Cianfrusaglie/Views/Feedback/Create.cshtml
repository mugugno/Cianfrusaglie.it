@model Cianfrusaglie.Models.FeedBack

@{
    ViewData["Title"] = "Recensione e Feedback";
}

<form asp-action="Create" >
    <div class="panel-heading" id="my-conversations">
        <h3>@ViewData["Title"]</h3>
    </div>

    <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
    <div class="panel panel-body" >
        <div class="form-group">
            <label class="control-label">Scrivi una Recensione per l'utente @((User)ViewData["receiver"])</label>
            <div class="col-md-5">
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">Voto</label>
            <div class="col-md-8">
                <input asp-for="Vote" class="form-control" />
                <span asp-validation-for="Vote" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
