@model IEnumerable<Announce>

@{
   ViewData[ "Title" ] = "Index";
}

<div class="container">
    

    <div class="row">
        
            @foreach (var annuncio in Model)
            {
                <div class="col-sm-3">
                    <div class="col-item">
                        <div class="photo">
                            <img src="http://ecx.images-amazon.com/images/I/61QG2uHzY3L._SL1000_.jpg" class="img-responsive" alt="a" />
                        </div>
                        <div class="info">
                            <div class="row">
                                <div class="price col-md-6">
                                    <h5>
                                        @annuncio.Title
                                    </h5>
                                    @if (@annuncio.Price == 0)
                                    {
                                        <h5 class="price-text-color">IN REGALO</h5>
                                    }
                                    else
                                    {
                                        <h5 class="price-text-color">Prezzo: @annuncio.Price</h5>
                                    }
                                </div>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="rating hidden-sm col-md-6">
                                        <i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                                        </i><i class="price-text-color fa fa-star"></i><i class="price-text-color fa fa-star">
                                        </i><i class="fa fa-star"></i>
                                    </div>
                                }
                            </div>
                            <div class="separator clear-left">
                                    @if (!User.Identity.IsAuthenticated)
                                    {
                                        <p class="btn-add">
                                            <i class="fa fa-shopping-cart"></i>
                                            <a href="#" data-toggle="modal" data-target="#myWindow" class="hidden-sm">Dettagli</a>
                                        </p>
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><a href="#" data-toggle="modal" data-target="#myWindow" class="hidden-sm">Contatta</a>
                                        </p>
                                    }
                                    else
                                    {
                                        <p class="btn-add">
                                            <i class="fa fa-shopping-cart"></i>
                                            <a href="~/Announces/Details/?id=@annuncio.Id" class="hidden-sm">Dettagli</a>
                                        </p>
                                        <p class="btn-details">
                                            <i class="fa fa-list"></i><a href="~/Messages/Details/?id=@annuncio.AuthorId" class="hidden-sm">Contatta</a>
                                        </p>
                                    }
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            }
                
    </div>
</div>


